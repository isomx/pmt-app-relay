{
  "name": "pmt-relay",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.17.2",
    "chalk": "^2.0.1",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "graphiql": "^0.11.2",
    "graphql": "^0.10.4",
    "graphql-relay": "^0.5.2",
    "graphql-sequelize": "^5.4.0",
    "graphql-server-express": "^1.0.0",
    "graphql-tools": "^1.1.0",
    "lodash": "^4.17.4",
    "mysql2": "^1.3.6",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-relay": "^1.1.0",
    "rxjs": "^5.4.2",
    "sequelize": "^4.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-relay": "^1.1.0",
    "babel-preset-es2015": "^6.24.1",
    "nodemon": "^1.11.0",
    "relay-compiler": "^1.1.0",
    "relay-modern-scripts": "1.0.6",
    "wordexpress-schema": "^2.0.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "get-schema": "react-scripts get-schema http://localhost:3002/graphql",
    "update-schema": "babel-node ./server/utils/updateSchema.js",
    "relay-compiler": "relay-compiler --src ./client --schema ./schema.graphql",
    "start-graphql": "nodemon --ext js --watch ./server --exec \"npm run update-schema && npm run start-graphql-sub-task\"",
    "start-graphql-sub-task": "babel-node server.js",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
